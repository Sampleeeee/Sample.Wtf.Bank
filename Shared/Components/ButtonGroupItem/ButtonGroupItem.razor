<li style="background-color: @(Brain.CurrentTheme.ButtonGroupColor); @Style" class="@Class">
    @if (!string.IsNullOrEmpty(Glyph) && GlyphPosition == GlyphPosition.Left)
    {
        <span class="oi" data-glyph="@Glyph"></span>
    }
    @ChildContent
    @if (!string.IsNullOrEmpty(Glyph) && GlyphPosition == GlyphPosition.Right)
    {
        <span class="oi" data-glyph="@Glyph"></span>
    }
</li>
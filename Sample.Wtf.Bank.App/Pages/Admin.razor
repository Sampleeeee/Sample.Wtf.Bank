@page "/ItsMe/TheAdmin"
@using Sample.Wtf.Bank.App.Components.Admin
@using Sample.Wtf.Bank.Entities.Api

@if ( !_loaded ) return;

<div class="mt-3 mr-4 ml-4 mb-3 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
    <strong class="font-bold">⚠️ ATTENTION!  ⚠️ </strong>
    <span class="block sm:inline">This system was not made with security in mind. Only run this on a virtual machine. Never give a scammer access to your local network.</span>
    <p>Please <strong>DO NOT</strong> give a user a password that you commonly (or ever) use. Passwords are <strong>not</strong> hashed. There is no password / account security.</p>
</div>

<div class="mx-auto pl-12 pr-12 pt-4">
    <h1 class="text-3xl font-bold mb-6">Admin Panel</h1>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-2 gap-4">
        <!-- Top Left: Users -->
        <div class="bg-gray-800 rounded-lg">
            <h2 class="text-xl font-semibold text-white mb-2 p-4 pb-0">Users</h2>
            <div class="overflow-x-auto">
                <table class="min-w-full bg-gray-700 rounded-lg overflow-hidden">
                    <thead>
                    <tr class="bg-gray-600 text-white">
                        <th class="py-2 px-4 text-left">Id</th>
                        <th class="py-2 px-4 text-left">First Name</th>
                        <th class="py-2 px-4 text-left">Last Name</th>
                        <th class="py-2 px-4 text-left">Username</th>
                        <th class="py-2 px-4 text-left">Password</th>
                        <th class="py-2 px-4 text-left">Accounts</th>
                        <th class="py-2 px-4 text-left">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach ( var user in Users )
                    {
                        <UserRow User="user" />
                    }
                    </tbody>
                    
                    <UserRow Creating="true" OnUserCreated="@(async ( UserResult user ) => await OnUserCreated( user ))" />
                    <tr><td>&nbsp;</td></tr>
                    <tr><td>&nbsp;</td></tr>
                </table>
            </div>
        </div>

        <!-- Top Right: Accounts -->
        <div class="bg-gray-800 rounded-lg p-4">
            <h2 class="text-xl font-semibold text-white mb-2">Accounts</h2>
            <div class="overflow-x-auto">
                <table class="min-w-full bg-gray-700 rounded-lg overflow-hidden">
                    <thead>
                    <tr class="bg-gray-600 text-white">
                        <th class="py-2 px-4 text-left">Account Name</th>
                        <th class="py-2 px-4 text-left">Last Four</th>
                        <th class="py-2 px-4 text-left">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr class="border-b border-gray-500">
                        <td class="py-2 px-4">
                            <input type="text" class="bg-gray-600 text-white rounded-md p-1" placeholder="Account Name" />
                        </td>
                        <td class="py-2 px-4">
                            <input type="text" class="bg-gray-600 text-white rounded-md p-1" placeholder="Last Four" />
                        </td>
                        <td class="py-2 px-4">
                            <button class="bg-blue-600 text-white rounded-md px-2 py-1">Save</button>
                        </td>
                    </tr>
                    <!-- Repeat as necessary for more accounts -->
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Bottom Left: Site Configuration -->
        <div class="bg-gray-800 rounded-lg p-4">
            <h2 class="text-xl font-semibold text-white mb-2">Site Configuration</h2>
            <div class="overflow-x-auto">
                <table class="min-w-full bg-gray-700 rounded-lg overflow-hidden">
                    <thead>
                    <tr class="bg-gray-600 text-white">
                        <th class="py-2 px-4 text-left">Setting</th>
                        <th class="py-2 px-4 text-left">Value</th>
                        <th class="py-2 px-4 text-left">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr class="border-b border-gray-500">
                        <td class="py-2 px-4">
                            <input type="text" class="bg-gray-600 text-white rounded-md p-1" value="Maintenance Mode" readonly />
                        </td>
                        <td class="py-2 px-4">
                            <input type="text" class="bg-gray-600 text-white rounded-md p-1" placeholder="Off/On" />
                        </td>
                        <td class="py-2 px-4">
                            <button class="bg-blue-600 text-white rounded-md px-2 py-1">Save</button>
                        </td>
                    </tr>
                    <tr class="border-b border-gray-500">
                        <td class="py-2 px-4">
                            <input type="text" class="bg-gray-600 text-white rounded-md p-1" value="Max Users" readonly />
                        </td>
                        <td class="py-2 px-4">
                            <input type="text" class="bg-gray-600 text-white rounded-md p-1" placeholder="1000" />
                        </td>
                        <td class="py-2 px-4">
                            <button class="bg-blue-600 text-white rounded-md px-2 py-1">Save</button>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Bottom Right: Transactions -->
        <div class="bg-gray-800 rounded-lg p-4">
            <h2 class="text-xl font-semibold text-white mb-2">Transactions</h2>
            <div class="overflow-x-auto">
                <table class="min-w-full bg-gray-700 rounded-lg overflow-hidden">
                    <thead>
                    <tr class="bg-gray-600 text-white">
                        <th class="py-2 px-4 text-left">Transaction ID</th>
                        <th class="py-2 px-4 text-left">Amount</th>
                        <th class="py-2 px-4 text-left">Date</th>
                        <th class="py-2 px-4 text-left">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr class="border-b border-gray-500">
                        <td class="py-2 px-4">
                            <input type="text" class="bg-gray-600 text-white rounded-md p-1" placeholder="T123456" />
                        </td>
                        <td class="py-2 px-4">
                            <input type="text" class="bg-gray-600 text-white rounded-md p-1" placeholder="+$200.00" />
                        </td>
                        <td class="py-2 px-4">
                            <input type="text" class="bg-gray-600 text-white rounded-md p-1" placeholder="2024-01-01" />
                        </td>
                        <td class="py-2 px-4">
                            <button class="bg-blue-600 text-white rounded-md px-2 py-1">Save</button>
                        </td>
                    </tr>
                    <tr class="border-b border-gray-500">
                        <td class="py-2 px-4">
                            <input type="text" class="bg-gray-600 text-white rounded-md p-1" placeholder="T654321" />
                        </td>
                        <td class="py-2 px-4">
                            <input type="text" class="bg-gray-600 text-white rounded-md p-1" placeholder="- $50.00" />
                        </td>
                        <td class="py-2 px-4">
                            <input type="text" class="bg-gray-600 text-white rounded-md p-1" placeholder="2024-01-02" />
                        </td>
                        <td class="py-2 px-4">
                            <button class="bg-blue-600 text-white rounded-md px-2 py-1">Save</button>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<Footer Class="mt-12" />
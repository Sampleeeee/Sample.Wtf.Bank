@page "/Account/{UserId}/{AccountId}"

<div class="bg-gray-800 min-h-screen p-8 font-sans">
    <div class="max-w-5xl mx-auto">
        <!-- Page Header -->
        <div class="mb-4">
            <h1 class="text-3xl font-extrabold text-purple-600">Account Details</h1>
            <p class="font-normal text-white">Welcome back, User {UserId}! Here are the details for your account: {AccountId}.</p>
        </div>

        <!-- Account Details Section -->
        <div class="bg-gray-700 p-6 rounded-lg shadow-md mb-6">
            <h2 class="text-xl font-semibold mb-3 text-white">Account Information</h2>
            <div class="grid grid-cols-2 gap-4">
                <div class="border p-4 rounded-md">
                    <h3 class="font-bold text-white">Account Number:</h3>
                    <p class="text-gray-300">****{LastFour}</p>
                </div>
                <div class="border p-4 rounded-md">
                    <h3 class="font-bold text-white">Account Type:</h3>
                    <p class="text-gray-300">Checking Account</p>
                </div>
                <div class="border p-4 rounded-md">
                    <h3 class="font-bold text-white">Current Balance:</h3>
                    <p class="text-xl font-bold text-green-400">$1,234.56</p>
                </div>
                <div class="border p-4 rounded-md">
                    <h3 class="font-bold text-white">Account Status:</h3>
                    <p class="text-green-400">Active</p>
                </div>
            </div>
        </div>

        <!-- Recent Transactions Table -->
        <div class="bg-gray-700 p-6 rounded-lg shadow-md mb-6">
            <h2 class="text-xl font-semibold mb-3 text-white">Recent Transactions</h2>
            <div class="overflow-x-auto">
                <table class="w-full table-auto text-left border-collapse">
                    <thead class="bg-gray-600">
                        <tr>
                            <th class="px-4 py-2 text-sm font-medium text-gray-300">Date</th>
                            <th class="px-4 py-2 text-sm font-medium text-gray-300">Description</th>
                            <th class="px-4 py-2 text-sm font-medium text-gray-300">Amount</th>
                            <th class="px-4 py-2 text-sm font-medium text-gray-300">Balance</th>
                            <th class="px-4 py-2 text-sm font-medium text-gray-300">Reference</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="hover:bg-gray-600 text-gray-300">
                            <td class="px-4 py-2">11/01/2024</td>
                            <td class="px-4 py-2">Deposit from "Rich Uncle"</td>
                            <td class="px-4 py-2 text-green-400">+$1,000.00</td>
                            <td class="px-4 py-2">$1,234.56</td>
                            <td class="px-4 py-2">REF#A1B2C3</td>
                        </tr>
                        <tr class="hover:bg-gray-600 text-gray-300">
                            <td class="px-4 py-2">10/29/2024</td>
                            <td class="px-4 py-2">Mystery Withdrawal</td>
                            <td class="px-4 py-2 text-red-400">-$500.00</td>
                            <td class="px-4 py-2">$734.56</td>
                            <td class="px-4 py-2">REF#D4E5F6</td>
                        </tr>
                        <tr class="hover:bg-gray-600 text-gray-300">
                            <td class="px-4 py-2">10/28/2024</td>
                            <td class="px-4 py-2">Payment to "Sketchy Online Shop"</td>
                            <td class="px-4 py-2 text-red-400">-$200.00</td>
                            <td class="px-4 py-2">$534.56</td>
                            <td class="px-4 py-2">REF#G7H8I9</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<Footer />

@code {
    [Parameter] public string UserId { get; set; }
    [Parameter] public string AccountId { get; set; }
}
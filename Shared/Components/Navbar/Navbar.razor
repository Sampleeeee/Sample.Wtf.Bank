@namespace Bank.Shared.Components.Navbar

<header
    style='@($"background-color: {Brain.CurrentTheme.PrimaryBackgroundColor}; color: {Brain.CurrentTheme.HeaderAnchorColor}")'>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2 style='@($"margin-top: 8px; color: {Brain.CurrentTheme.HeaderNameColor}")'>@Brain.BankName</h2>
            </div>
            <div class="header-menu">
                <nav>
                    <ul class="nav mx-auto">
                        @if (!Brain.LoggedIn)
                        {
                            <li class="nav-item">
                                <Anchor Color="@("Brain.CurrentTheme.HeaderAnchorColor")" Class="nav-link">Personal</Anchor>
                            </li>
                            <li class="nav-item">
                                <Anchor Color="@("Brain.CurrentTheme.HeaderAnchorColor")" Class="nav-link">Business</Anchor>
                            </li>
                            <li class="nav-item">
                                <Anchor Color="@("Brain.CurrentTheme.HeaderAnchorColor")" Class="nav-link">Investing
                                </Anchor>
                            </li>
                            <li class="nav-item">
                                <Anchor Color="@("Brain.CurrentTheme.HeaderAnchorColor")" Class="nav-link">Contact</Anchor>
                            </li>
                            <li class="nav-item">
                                <Anchor Color="@("Brain.CurrentTheme.HeaderAnchorColor")" Class="nav-link">About</Anchor>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <Anchor Color="@("Brain.CurrentTheme.HeaderAnchorColor")" Class="nav-link"
                                    Location="/account">Accounts</Anchor>
                            </li>
                            <li class="nav-item">
                                <Anchor Color="@("Brain.CurrentTheme.HeaderAnchorColor")" Class="nav-link"
                                    Location="/transactions/-1">Transactions</Anchor>
                            </li>
                            <li class="nav-item">
                                <Anchor Color="@("Brain.CurrentTheme.HeaderAnchorColor")" Class="nav-link"
                                    Location="/transactions/-1">Transfer</Anchor>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</header>